# Nginx 配置文件示例
# 说明: 这是一个完整的 Nginx 虚拟主机配置示例
# 位置: 应该放在服务器的 /etc/nginx/sites-available/bondee
# 使用: sudo ln -s /etc/nginx/sites-available/bondee /etc/nginx/sites-enabled/

server {
    # ==================== 基础配置 ====================
    listen 80;  # 监听 80 端口（HTTP）
    listen [::]:80;  # 支持 IPv6
    
    server_name 你的域名或IP;  # ⚠️ 修改为你的域名或服务器 IP
    
    # ==================== 网站根目录 ====================
    root /var/www/bondee/dist;  # 静态文件目录
    index index.html index.htm;  # 默认首页文件

    # ==================== 日志配置 ====================
    access_log /var/log/nginx/bondee_access.log;
    error_log /var/log/nginx/bondee_error.log;

    # ==================== 主路由配置 ====================
    # 支持前端路由（React Router）
    location / {
        try_files $uri $uri/ /index.html;
        # 说明:
        # 1. 先尝试访问文件本身 ($uri)
        # 2. 如果不存在，尝试作为目录访问 ($uri/)
        # 3. 都不存在则返回 index.html（单页应用的关键）
    }

    # ==================== 静态资源缓存 ====================
    # 对于带有 hash 或版本号的静态资源，设置长期缓存
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;  # 缓存 1 年
        add_header Cache-Control "public, immutable";
        access_log off;  # 静态资源不记录访问日志
    }

    # ==================== index.html 不缓存 ====================
    # 确保用户总是获取最新的 HTML
    location = /index.html {
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }

    # ==================== Gzip 压缩 ====================
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;  # 压缩级别 (1-9)
    gzip_types 
        text/plain
        text/css
        text/xml
        text/javascript
        application/json
        application/javascript
        application/xml+rss
        application/rss+xml
        font/truetype
        font/opentype
        application/vnd.ms-fontobject
        image/svg+xml;
    gzip_disable "msie6";  # 禁用 IE6 的 gzip

    # ==================== 安全头部 ====================
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # ==================== 禁止访问隐藏文件 ====================
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # ==================== API 代理示例（如有后端 API）====================
    # 如果你有后端 API 服务，可以取消注释配置代理
    # location /api {
    #     proxy_pass http://localhost:3000;  # 后端服务地址
    #     proxy_http_version 1.1;
    #     proxy_set_header Upgrade $http_upgrade;
    #     proxy_set_header Connection 'upgrade';
    #     proxy_set_header Host $host;
    #     proxy_cache_bypass $http_upgrade;
    #     proxy_set_header X-Real-IP $remote_addr;
    #     proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    #     proxy_set_header X-Forwarded-Proto $scheme;
    # }
}

